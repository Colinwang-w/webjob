@section Scripts
    {
    <script>
        $(function () {
            function play() {
                $.ajax({
                    url: "",
                    type: "post",
                    dataType: "Json",
                    success: function (data) {
                        if (data.success) {
                            var obj = $.parseJSON(data);
                            var list = new Array();
                            var list2 = new Array();
                            for (var i = 0; i < obj.length; i++) {
                                list.push()//添加图片地址
